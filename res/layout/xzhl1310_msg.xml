<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical"  >
<RelativeLayout 
    android:id="@+id/messagerela"
    android:layout_width="fill_parent"
    android:layout_height="60.0dp"
    android:background="#41a9ef" >
    <Button
        android:id="@+id/goToMain"
        android:layout_width="35.0dp"
        android:layout_height="35.0dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/arrow"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp" />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:text="@string/xiaoxiyilan"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/shuxinList"
         android:layout_width="35.0dp"
        android:layout_height="35.0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
      
        android:gravity="center"
        android:textColor="#FFFF00"
        android:textSize="16sp" />
</RelativeLayout>
   

    
   <ListView 
    android:id="@+id/listSurvey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:dividerHeight="1dp"
    android:divider="@drawable/bg_topbar"
    /> 
 
 
 
    </LinearLayout>