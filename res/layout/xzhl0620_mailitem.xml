<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_mailid_xzhl0620"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/textcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mailnumber_xzhl0620"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mailname_xzhl0620"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_mailstatus_xzhl0620"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_mailjian_xzhl0620"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/jiantou"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>