<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/topbarbg" >

<!-- 标题栏的回退图片 -->
    <ImageView
        android:id="@+id/iv_back_1410"
        android:layout_width="@dimen/topbar_btn1_width"
        android:layout_height="@dimen/topbar_btn1_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/topbar_btn1_margin_left"
        android:contentDescription="@null"
        android:src="@drawable/arrow" />

<!-- 标题栏的文本内容 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/xzhl1410_toolbar"
        android:textColor="@color/white"
        android:textSize="@dimen/topbar_textview_textsize"
        android:textStyle="bold" />

</RelativeLayout>