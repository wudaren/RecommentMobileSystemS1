<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XZHL0720_Activity" 
    android:orientation="vertical">
 <RelativeLayout 
    android:id="@+id/xiaoshouHeader"
    android:layout_width="fill_parent"
    android:layout_height="60.0dp"
    android:background="#41a9ef" >
    <Button
        android:id="@+id/goToMain2"
        android:layout_width="35.0dp"
        android:layout_height="35.0dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/arrow"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp" />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:text="销售汇总"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp"
        android:textStyle="bold" />
</RelativeLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp" 
        android:orientation="horizontal">
	
        <TextView
            android:id="@+id/qijian"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="期间："
            android:textSize="16sp" />

        <Button
            android:id="@+id/datestart"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2.5"
            android:layout_gravity="center" 
            android:background="@drawable/biankuang"                                
            android:gravity="center"
            android:ems="10"
            android:text="2010/8/8"
            android:textSize="14sp" >
        </Button>

        <TextView
            android:id="@+id/fenge"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" ~ " />

         <Button
            android:id="@+id/dateend"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2.5"
            android:layout_gravity="center" 
            android:background="@drawable/biankuang"                                
            android:gravity="center"
            android:ems="10"
            android:text="2010/8/8"
            android:textSize="14sp" >
        </Button>
        <Button
            android:id="@+id/sousuo"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/sousuo"          
           />
       <TextView 
	    android:layout_width="0dp"
	    android:layout_height="30dp"
	    android:layout_weight="1"
	    android:visibility="invisible"
	    /> 
    </LinearLayout>
    <ListView 
        android:id="@+id/listTotal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:dividerHeight="1dp"
        android:divider="#FF6d6c6c"
        ></ListView>
</LinearLayout>
