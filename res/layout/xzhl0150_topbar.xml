<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head"
    android:layout_width="fill_parent"
    android:layout_height="60.0dp"
    android:background="@color/topbarbg" >

    <Button
        android:id="@+id/btn_goback_0150"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/arrow"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:text="@string/huiyuanliebiao"
        android:textColor="#FFFFFF"
        android:textSize="20.0sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_chazhao_0150"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="58dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/chazhao"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_add_0150"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/add"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>