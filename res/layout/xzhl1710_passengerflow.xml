<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_linearlayout_1710"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
         <include layout="@layout/xzhl1710_passengerflow_toolbar"/>
    </LinearLayout>
    
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dip"
      android:background="@color/searchbackground"
      android:gravity="center"
      android:orientation="horizontal" >
         <Button
             android:id="@+id/btn_ontime_1710"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:layout_marginTop="5dip"
             android:layout_marginLeft="30dp"
             android:layout_marginBottom="5dip"
             android:text="@string/xzhl1710_ontime"
             style="?android:attr/borderlessButtonStyle"
             android:background="@drawable/xzhl1710_bg_ontimebutton_selector">
             
         </Button>
         <Button
             android:id="@+id/btn_history_1710"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:layout_marginTop="5dip"
             android:layout_marginRight="30dp"
             android:layout_marginBottom="5dip"
             android:text="@string/xzhl1710_history"
             style="?android:attr/borderlessButtonStyle"
             android:background="@drawable/xzhl1710_bg_historybutton_selector">
             
         </Button>
    </LinearLayout>
   <!--  这个组件，注意这个组件是用来显示左右滑动的界面的，如果不加载xml布局文件，他是不会显示内容的。   -->
    <android.support.v4.view.ViewPager
      android:id="@+id/vp_viewpager_1710"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center" > 
    </android.support.v4.view.ViewPager>
</LinearLayout>